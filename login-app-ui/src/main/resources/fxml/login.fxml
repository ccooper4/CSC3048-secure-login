<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefWidth="231.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.login.LoginController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="10.0">
                    <children>
                        <!-- Login fields -->
                        <GridPane alignment="CENTER">
                            <children>
                                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="user" text="55408864" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <TextField fx:id="password" text="test" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>

                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                            </columnConstraints>

                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>

                             <VBox.margin>
                                <Insets top="20.0" />
                             </VBox.margin>
                        </GridPane>

                        <!-- Buttons-->
                        <FlowPane alignment="CENTER">
                            <Button fx:id="loginButton" text="Login">
                                <FlowPane.margin>
                                   <Insets right="10.0" />
                                </FlowPane.margin>
                            </Button>

                            <Button fx:id="registerButton" text="Register">
                                <FlowPane.margin>
                                   <Insets left="10.0" />
                                </FlowPane.margin>
                            </Button>

                         <VBox.margin>
                            <Insets top="20.0" />
                         </VBox.margin>
                        </FlowPane>

                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</StackPane>
